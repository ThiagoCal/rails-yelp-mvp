<h2> <%= @restaurant.name %></h2>

<h3><%= @restaurant.category %></h3>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>

<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"> Review: <%= review.content%> | Rating: <%= review.rating %> | <%= link_to "Delete review", review_path(review[:id]), method: :delete, data: {confirm: "Are you sure?"} %></li>
  <% end %>
</ul>

<%= link_to "Leave a review", new_restaurant_review_path(@restaurant), style:"display:block" %>
<%= link_to "Back to Home Page", restaurants_path, style:"display:block" %>
<%= link_to "Delete #{@restaurant.name}",
            restaurant_path(@restaurant),
            method: :delete,
            data: { confirm: "Are you sure?" }, style:"display:block" %>
