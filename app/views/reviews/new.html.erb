<h2>Leave a review</h2>

<div class="container">
  <%= simple_form_for [ @restaurant, @review ] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, collection: Review::RANGE %>
    <%= f.submit "Submit review", class: "btn btn-primary" %>
  <% end %>
</div>



<%= link_to "Back to Home Page", restaurants_path %>
